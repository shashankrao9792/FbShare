<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InviteFriendsToNewGroup"
    android:background="@color/colorLightBlue"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/button_invite_frnds_new_grp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="18dp"
        android:layout_marginEnd="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="161dp"
        android:background="@drawable/facebook_invite_frnds_to_new_group"
        android:text="@string/invite_frnds_new_grp"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toTopOf="@+id/button_dont_invite_frnds_new_grp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_dont_invite_frnds_new_grp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="109dp"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="17dp"
        android:background="@drawable/facebook_invite_frnds_to_new_group"
        android:text="@string/dont_invite_frnds_new_grp"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toTopOf="@+id/inviteFrndsNewGroupBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_invite_frnds_new_grp" />

    <Button
        android:id="@+id/inviteFrndsNewGroupBtn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:text="Continue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_dont_invite_frnds_new_grp" />

</android.support.constraint.ConstraintLayout>